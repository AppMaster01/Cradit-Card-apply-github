<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_230sdp"
    android:padding="2dp">

    <TextView
        android:id="@+id/native_ad_attribution_small"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/small_backgrund"
        android:gravity="center"
        android:text="AD"
        android:textColor="#ADA600"
        android:textSize="10dp"
        android:textStyle="bold" />

    <com.google.android.gms.ads.nativead.MediaView
        android:id="@+id/native_ad_media"
        android:layout_width="@dimen/_275sdp"
        android:layout_height="120dp"


        android:layout_marginTop="@dimen/_63sdp">

    </com.google.android.gms.ads.nativead.MediaView>


    <ImageView
        android:id="@+id/native_ad_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:scaleType="fitXY"
        tools:background="#EDEDED" />


    <TextView
        android:id="@+id/native_ad_headline"
        android:layout_width="133dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_45sdp"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="QuickLoan" />


    <TextView
        android:id="@+id/native_ad_body"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#828282"
        android:textSize="14sp"
        tools:text="body" />


    <Button
        android:id="@+id/native_ad_button"
        android:layout_width="@dimen/_145sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_88sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@drawable/background"
        android:text="Install"
        android:textAllCaps="true"
        android:textColor="#78C795"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"

        />


</com.google.android.gms.ads.nativead.NativeAdView>